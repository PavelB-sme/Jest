{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": 
  {
    "indent": ["off"],         
    "linebreak-style": ["off"],  
    "prefer-const": "error",
     "no-plusplus": "off"
  }
}  